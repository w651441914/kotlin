<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_ljtb_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF">

    <RelativeLayout
        android:id="@+id/rl_ljtb_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lk_dp_50">

        <LinearLayout
            android:id="@+id/rl_ljtb_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/jni_public_click_effect_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/lk_dp_10"
            android:paddingRight="@dimen/lk_dp_10">

            <ImageView
                android:id="@+id/iv_ljtb_left_back"
                android:layout_width="@dimen/lk_dp_20"
                android:layout_height="@dimen/lk_dp_18"
                android:src="@drawable/jni_topbar_selector_back_bg" />

            <TextView
                android:id="@+id/tv_ljtb_left_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/lk_sp_16"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_ljtb_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxEms="10"
            android:maxLines="1"
            android:padding="@dimen/lk_dp_5"
            android:textColor="@color/color_2D2A2A"
            android:textSize="@dimen/lk_sp_18" />

        <LinearLayout
            android:id="@+id/rl_ljtb_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/jni_public_click_effect_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/lk_dp_10"
            android:paddingRight="@dimen/lk_dp_10">

            <TextView
                android:id="@+id/tv_ljtb_right_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/lk_sp_16"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_ljtb_right_back"
                android:layout_width="@dimen/lk_dp_20"
                android:layout_height="@dimen/lk_dp_18"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_ljtb_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lk_px_1"
        android:layout_below="@+id/rl_ljtb_top_layout"
        android:background="@color/color_CACACA" />
</RelativeLayout>
